	"item": [
		{
			"name": "Get Access Token",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"id": "40e11572-f7c0-4c5b-8041-7f11c89283d3",
						"exec": [
							"console.log('Get Access Token');"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"id": "fa050f44-d684-478c-adc9-d014d6b1e9f7",
						"exec": [
							"var responsePayload = pm.response.json();",
							"",
							"// Test whether response has an HTTP status code of 200.",
							"pm.test(\"response status is 200 (OK)\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"// Test whether response body is JSON.",
							"pm.test(\"response body is JSON\", function () {",
							"    pm.response.to.be.json;",
							"});",
							"",
							"// Test whether response body is valid schema.",
							"pm.test(\"response body is valid schema\", function () {",
							"    var schema = {",
							"        \"type\": \"object\",",
							"        \"properties\": {",
							"            \"access_token\": {",
							"                \"type\": \"string\"",
							"            },",
							"            \"token_type\": {",
							"                \"type\": \"string\"",
							"            },",
							"            \"expires_in\": {",
							"                \"type\": \"integer\"",
							"            },",
							"            \"scope\": {",
							"                \"type\": \"string\"",
							"            }",
							"        },",
							"        \"required\": [\"access_token\", \"token_type\", \"expires_in\", \"scope\"]",
							"    };",
							"",
							"    pm.expect(tv4.validate(responsePayload, schema)).to.be.true;",
							"});",
							"",
							"var accessToken = responsePayload.access_token;",
							"",
							"// Log variables.",
							"console.log('oauth2.accessToken: ' + accessToken);",
							"",
							"// Assign variables.",
							"pm.environment.set(\"oauth2.accessToken\", accessToken);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "password",
							"value": "{{oauth2.secret}}",
							"type": "string"
						},
						{
							"key": "username",
							"value": "{{oauth2.clientId}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"type": "text",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "grant_type",
							"value": "client_credentials",
							"type": "text"
						},
						{
							"key": "scope",
							"value": "accounts",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "https://openapi.investec.com/identity/v2/oauth2/token",
					"protocol": "https",
					"host": [
						"openapi",
						"investec",
						"com"
					],
					"path": [
						"identity",
						"v2",
						"oauth2",
						"token"
					]
				},
				"description": "Represents a request to obtain a \"client_credentials\" grant typed access token."
			},
			"response": []
		},
